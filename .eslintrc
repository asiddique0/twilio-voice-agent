{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
  ],
  "rules": {
      "indent": ["error", 2],
      "@typescript-eslint/no-var-requires": "off"
  },
  "env": {
      "browser": false,
      "es2021": true
  }
}